{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["../node_modules/@types", "index.d.ts"],
    "baseUrl": "src",
    "paths": {
      "@src/*": ["./*"],
      "@/*": ["./modules/*"]
    }
  }
}
